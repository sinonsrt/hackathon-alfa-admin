<!DOCTYPE html>
<html lang="pt-BR">
<%- include layouts/header %>
    </head>
    </head>

    <body>
        <%- include layouts/navbar %>

            <div class="container">
                <h2 class="my-4"> Dashboard </h2>

                <div class="row">
                    <div class="col-md-4">
                        <div class="card text-dark bg-light mb-3">
                            <div class="card-header">Veículos Novos</div>
                            <div class="card-body">
                                <h1 class="text-center display-4">
                                    <%= data.novos.novos %>
                                </h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-dark bg-light mb-3">
                            <div class="card-header">Veículos Seminovos</div>
                            <div class="card-body">
                                <h1 class="text-center display-4">
                                    <%= data.seminovos.seminovos %>
                                </h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-dark bg-light mb-3">
                            <div class="card-header">Veículos Destaque</div>
                            <div class="card-body">
                                <h1 class="text-center display-4"><%= data.destaques.destaques %></h1>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-8">
                        <div class="card text-dark bg-light mb-3">
                            <div class="card-header">Últimos veículos cadastrados</div>
                            <div class="card-body">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th scope="col">Modelo</th>
                                            <th scope="col">Marca</th>
                                            <th scope="col">Ano</th>
                                            <th scope="col">Valor</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let v of data.ultimos) { %>
                                        <tr class="align-middle">
                                            <td><img src="<%= v.foto %>" alt="<%= v.modelo %>" style="width: 80px;"></td>
                                            <td><%= v.modelo %></td>
                                            <td><%= v.marca %></td>
                                            <td><%= v.anofabricacao %>/<%= v.anomodelo %></td>
                                            <td><%= (v.valor.toLocaleString('pt-br',{style: 'currency', currency: 'BRL', minimumFractionDigits: 0})) %></td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-dark bg-light mb-3">
                            <div class="card-header">Estoque Marcas</div>
                            <div class="card-body">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">Marca</th>
                                            <th scope="col">Qtde</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let m of data.marcas) { %>
                                        <tr>
                                            <td><%= m.marca %></td>
                                            <td><%= m.qtde %></td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <%- include layouts/footer %>
    </body>
    </body>

</html>