<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include ../layouts/header %>
</head>

<body>
    <%- include ../layouts/navbar %>

    <div class="container mt-5">

        <h1 class="text-center">Ve√≠culos</h1>
        
        <div class="row my-3">
            <div class="rol-8 form-group col-12">
                <a href="cadastroVehicles" class="btn btn-dark float-end">Adicionar</a>
            </div>
        </div>

        <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Modelo</th>
                    <th>Marca</th>
                    <th>Ano</th>
                    <th>Valor</th>
                    <th>Tipo</th>
                    <th>Destaque?</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for(let d of data) { %>
                <tr>
                    <td><%= d.id %></td>
                    <td><%= d.modelo %></td>
                    <td><%= d.marca %></td>
                    <td><%= d.anofabricacao %>/<%= d.anomodelo %></td>
                    <td>R$ <%= d.valor %></td>
                    <td><%= d.tipo %></td>
                    <td><%= d.destaque %></td>
                    <td>
                        <i class="pencil-fill"></i>
                        <i class="trash-fill"></i>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
        
    </div>

    <%- include ../layouts/footer %>

    <script>
        $(document).ready(function() {
            $('#example').DataTable();
        });
    </script>
</body>
</html>