<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include ../layouts/header %></head>
<body>
    <%- include ../layouts/navbar %>
    <div class="container mt-5">
        <div class="rol-8 form-group col-12">
            <a href="listUsers" class="btn btn-dark float-end">Usuários Cadastrados</a>
        </div>
        <h1 class="text-center"> Cadastro de Usuários </h1>
        <form method="POST" action="/atualizarUsers">
            <div class="row">
                <div class="form-group col-12 mb-2">
                    <label class="form-labbel">Nome:</label>
                    <input type="text" class="form-control" name="nome" value="<%=data.nome%>">
                    <input type="hidden" name="id" value="<%=data.id %>">
                </div>
                <div class="form-group col-12 mb-2">
                    <label class="form-labbel">Login:</label>
                    <input type="text" class="form-control" name="login" value="<%=data.login%>">
                </div>
                <div class="form-group col-12 mb-3">
                    <label class="form-labbel">Senha:</label>
                    <input type="password" class="form-control" name="senha" value="">
                </div>
                <div class="rol-8 form-group col-12 mb-3">
                    <button type="submit" class="btn btn-success float-end">Salvar</button>
                    <button type="reset" class="btn btn-danger float-end">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
    <%- include ../layouts/footer %></body>
</html>