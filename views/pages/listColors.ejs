<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include ../layouts/header %>
</head>

<body>
    <%- include ../layouts/navbar %>

    <div class="container mt-5">
        <table class="table">
            <h1 class="text-center">Cores</h1>
            <div class="col-auto">
                <a href="cadastroColors" class="btn btn-success float-end">Adicionar</a>
            </div>
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% for(let d of data) {%>
                <tr>
                    <th scope="row"><%= d.id %></th>
                    <td><%= d.cor %></td>
                    <td>
                        <a href="editColors/<%=d.id%>" class="btn btn-success">Editar</a>
                        <a type="reset" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <%- include ../layouts/footer %>
</body>
</html>